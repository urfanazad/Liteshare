{
  "manifest_version": 3,
  "name": "LiteShare Mode Extension",
  "version": "1.0",
  "description": "A Chrome extension for LiteShare screen sharing, enabling integration with platforms like Zoom, Teams, and Google Meet.",
  "permissions": [
    "desktopCapture"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
